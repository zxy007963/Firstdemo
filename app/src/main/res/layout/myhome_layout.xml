<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="500dp"
    android:layout_margin="16dp"
    android:background="@drawable/myhome_bg">

    <TextView
        android:textStyle="bold"
        android:id="@+id/fenlei_title_tv"
        android:text="我的"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/id_et"
        android:layout_marginTop="20dp"
        android:hint="ID:"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>
    <EditText
        android:id="@+id/ps_et"
        android:layout_marginTop="20dp"
        android:hint="PS:"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <TextView
            android:id="@+id/kong"
            android:layout_centerInParent="true"
            android:layout_width="200dp"
            android:layout_height="1dp" />
        <Button
            android:text="登录"
            android:textColor="#FFFFFFFF"
            android:background="@drawable/login_bg"
            android:id="@+id/login_btn"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@id/kong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:text="注册"
            android:textColor="#FFFFFFFF"
            android:background="@drawable/login_bg"
            android:id="@+id/zhuce_btn"
            android:layout_centerVertical="true"
            android:layout_alignRight="@id/kong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:layout_weight="1"
        android:gravity="center"
        android:text="第三方登录"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#000000"></View>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/qq_login_iv"
            android:src="@mipmap/ssdk_oks_classic_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/sina_login_iv"
            android:src="@mipmap/ssdk_oks_classic_sinaweibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>