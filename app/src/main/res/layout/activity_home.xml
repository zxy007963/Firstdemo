<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <FrameLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/main_framelayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></FrameLayout>
        </ScrollView>
        <Button
            android:id="@+id/shousuo_btn"
            android:text="点击搜索"
            android:textColor="#dfdfdf"
            android:layout_margin="10dp"
            android:background="@drawable/search_bg"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/main_iv"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@mipmap/browser"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/fenlei_iv"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@mipmap/blue_dict"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/shoucang_iv"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@mipmap/blackberry_infrastructure"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/myhome_iv"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@mipmap/bump"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
